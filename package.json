{
  "name": "homepage",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build:css": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=1 tailwindcss -i ./src/styles/main.css -o ./assets/css/main.css --minify",
    "watch:css": "cross-env BROWSERSLIST_IGNORE_OLD_DATA=1 tailwindcss -i ./src/styles/main.css -o ./assets/css/main.css --watch",
    "build:js": "esbuild src/main.jsx --bundle --sourcemap --minify --loader:.jsx=jsx --outfile=assets/js/app.bundle.js",
    "watch:js": "esbuild src/main.jsx --bundle --sourcemap --loader:.jsx=jsx --outfile=assets/js/app.bundle.js --watch",
    "build": "npm-run-all build:css build:js",
    "dev": "npm-run-all --parallel watch:css watch:js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WayneXuCN/homepage.git"
  },
  "keywords": [],
