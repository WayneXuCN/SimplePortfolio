{
    "name": "SimpleLandingPage",
    "version": "2.0.0",
    "description": "Minimalist personal landing page and digital business card built with Astro, React and Tailwind CSS",
    "type": "module",
    "scripts": {
        "dev": "astro dev",
        "build": "astro build",
        "preview": "astro preview",
        "astro": "astro",
        "fetch:rss": "bun run scripts/fetch-rss.bun.js",
        "fetch:rss:node": "node scripts/fetch-rss.js",
        "prebuild": "bun run scripts/fetch-rss.bun.js || true",
        "format": "prettier --write '**/*.{js,jsx,ts,tsx,json,css,html,astro}'",
        "format:check": "prettier --check '**/*.{js,jsx,ts,tsx,json,css,html,astro}'",
        "next:dev": "next dev",
        "next:build": "next build",
        "next:start": "next start"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WayneXuCN/homepage.git"
