  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/WayneXuCN/homepage/issues"
  },
  "homepage": "https://github.com/WayneXuCN/homepage#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.22",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^3.4.18"
  }
}
